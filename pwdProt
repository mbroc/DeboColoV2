  <script>
    function checkPassword() {
      const pwd = document.getElementById("pwd").value;
      if (pwd === "monmotdepasse") {
        window.location.href = "https://sites.google.com/view/monsite/page-principale";
      } else {
        alert("Mot de passe incorrect.");
      }
    }
  </script>
